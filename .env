# Minimum ORE balance to trigger swap (default: 0.5 ORE)
MIN_ORE_FOR_SWAP=0.1

# Safety Settings
# Keep this much SOL in wallet for transaction fees
MIN_WALLET_BALANCE=0.0001

# Dry run mode - simulate without actually sending transactions (true/false)
DRY_RUN=false
